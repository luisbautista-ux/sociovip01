rules_version = '2';

// Reglas para el servicio de Firebase Storage
service firebase.storage {
  // Coincide con cualquier bucket en tu proyecto
  match /b/{bucket}/o {

    // Reglas para todos los archivos dentro de la carpeta de un negocio específico
    match /businesses/{businessId}/{allPaths=**} {

      // Cualquiera puede leer los archivos (logos, portadas, etc.)
      allow read: if true;

      // Un usuario puede escribir (subir, actualizar, borrar) si se cumplen TODAS las condiciones:
      // 1. El usuario está autenticado (request.auth no es nulo).
      // 2. Existe un documento en Firestore para ese usuario en la colección 'platformUsers'.
      // 3. El campo 'businessId' en el perfil de Firestore del usuario coincide con el 'businessId' de la carpeta de la imagen.
      allow write: if request.auth != null &&
                      exists(/databases/(default)/documents/platformUsers/$(request.auth.uid)) &&
                      get(/databases/(default)/documents/platformUsers/$(request.auth.uid)).data.businessId == businessId;
    }
  }
}
