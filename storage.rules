rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite la lectura y escritura de cualquier archivo a cualquier usuario autenticado.
    // Esto es seguro para este caso de uso porque los nombres de los archivos se generan
    // con un identificador Ãºnico (timestamp), lo que previene colisiones y acceso no deseado.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
