rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is a Super Admin
    function isSuperAdmin() {
      // Check if the user's profile in Firestore has the 'superadmin' role
      return isSignedIn() && get(/databases/$(database)/documents/platformUsers/$(request.auth.uid)).data.roles.hasAny(['superadmin']);
    }

    // Helper function to check if a user is a Business Admin or Staff for a specific business
    function isBusinessStaffOrAdmin(businessId) {
      let userProfile = get(/databases/$(database)/documents/platformUsers/$(request.auth.uid)).data;
      return isSignedIn() && userProfile.businessId == businessId && userProfile.roles.hasAny(['business_admin', 'staff']);
    }
    
    function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'businesses' collection
    match /businesses/{businessId} {
      // Public can read single documents (for business public pages)
      allow get: if true;
      
      // Super Admins can list, create, update, and delete businesses
      allow list, write: if isSuperAdmin();
    }

    // Rules for the 'platformUsers' collection
    match /platformUsers/{userId} {
      // A user can read their own profile
      allow get: if isOwner(userId);
      
      // Super Admins can list, create, update, and delete any user profile
      allow list, write: if isSuperAdmin();
    }
    
    // Rules for 'socioVipMembers'
    match /socioVipMembers/{memberId} {
      // Only Super Admins can manage VIP members
      allow read, write: if isSuperAdmin();
    }
    
    // Rules for 'qrClients'
    match /qrClients/{clientId} {
        // Super Admins can manage all QR clients
        allow read, write: if isSuperAdmin();
        
        // Allow public/unauthenticated creation of a new QR client
        allow create: if true;
    }
    
    // Rules for business entities (promotions, events, etc.)
    match /businessEntities/{entityId} {
        // Anyone can read them for public pages
        allow get: if true;

        // Staff/Admin of the specific business can list and write
        allow list, write: if isBusinessStaffOrAdmin(resource.data.businessId);

        // SuperAdmins can do anything
        allow read, write: if isSuperAdmin();
    }
    
    // Rules for links between businesses and promoters
    match /businessPromoterLinks/{linkId} {
        // Staff/Admin of the business can manage links
        allow read, write: if isBusinessStaffOrAdmin(resource.data.businessId);

        // SuperAdmins can do anything
        allow read, write: if isSuperAdmin();
    }
  }
}
