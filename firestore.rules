rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/platformUsers/$(request.auth.uid)).data.roles.hasAny(['superadmin']);
    }

    function isBusinessStaffOrAdmin(businessId) {
      let userProfile = get(/databases/$(database)/documents/platformUsers/$(request.auth.uid)).data;
      return isSignedIn() && userProfile.businessId == businessId && userProfile.roles.hasAny(['business_admin', 'staff']);
    }

    // --- COLLECTIONS ---

    // Businesses are public
    match /businesses/{businessId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Public entities can be read by anyone
    match /businessEntities/{entityId} {
      allow read: if true;
      // Only staff/admin of the specific business can write to their entities
      allow write: if isBusinessStaffOrAdmin(request.resource.data.businessId);
    }

    // Platform users can only be managed by Super Admins, but can read their own profile
    match /platformUsers/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow list, write: if isSuperAdmin();
    }

    // QR Clients: Allow public creation and public DNI checks.
    // Management only by Super Admins.
    match /qrClients/{clientId} {
      allow create: if true;
      // This rule allows anyone to run a query like "where('dni', '==', someDni)"
      // but does NOT allow them to list the entire collection.
      allow list: if true;
      allow read, update, delete: if isSuperAdmin();
    }
    
    // VIP Members are only managed by Super Admins
    match /socioVipMembers/{memberId} {
       allow read, write: if isSuperAdmin();
    }
    
    // Promoter links can be managed by the business they belong to
    match /businessPromoterLinks/{linkId} {
        allow read, write: if isBusinessStaffOrAdmin(request.resource.data.businessId);
    }
  }
}
