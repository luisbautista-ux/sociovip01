
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    //      Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/platformUsers/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      return isSignedIn() && 'superadmin' in getUserData().roles;
    }

    function isRoleForBusiness(role, businessId) {
      return isSignedIn() &&
             role in getUserData().roles &&
             getUserData().businessId == businessId;
    }

    // =================================
    //      Collection Rules
    // =================================

    // Negocios y sus entidades (promociones, eventos) son de lectura pública.
    match /businesses/{businessId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /businessEntities/{entityId} {
      allow read: if true;
      // La escritura requiere ser admin o staff del negocio correspondiente.
      allow create, update: if isSignedIn() && (isSuperAdmin() || isRoleForBusiness('business_admin', request.resource.data.businessId) || isRoleForBusiness('staff', request.resource.data.businessId));
      allow delete: if isSignedIn() && (isSuperAdmin() || isRoleForBusiness('business_admin', resource.data.businessId));
    }

    // Clientes QR: **CORRECCIÓN CLAVE**
    // Permite la consulta pública para verificar DNI.
    match /qrClients/{clientId} {
      // Permite la lectura pública (get para un doc, list para queries)
      allow get, list: if true;

      // La creación es pública desde la página del negocio.
      allow create: if true;

      // NADIE desde el cliente puede modificar o borrar. Solo el SuperAdmin desde un backend.
      allow update, delete: if false;
    }
    
    // El resto de las colecciones permanecen protegidas.
    match /platformUsers/{userId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    match /businessPromoterLinks/{linkId} {
      allow read, write: if isSignedIn() && (isSuperAdmin() || isRoleForBusiness('business_admin', resource.data.businessId));
    }

    match /socioVipMembers/{memberId} {
      allow read, write: if isSuperAdmin();
    }
  }
}
