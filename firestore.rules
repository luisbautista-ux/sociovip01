rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get user profile data
    function getUserProfile(userId) {
      return get(/databases/$(database)/documents/platformUsers/$(userId)).data;
    }
    
    // Helper function to check if a user is a Super Admin
    function isSuperAdmin() {
      let userProfile = getUserProfile(request.auth.uid);
      return isSignedIn() && 'roles' in userProfile && userProfile.roles.hasAny(['superadmin']);
    }

    // Helper function to check if a user is a Business Admin or Staff for a specific business
    function isBusinessStaffOrAdmin(businessId) {
      let userProfile = getUserProfile(request.auth.uid);
      return isSignedIn() && 'businessId' in userProfile && userProfile.businessId == businessId && 'roles' in userProfile && userProfile.roles.hasAny(['business_admin', 'staff']);
    }

    // --- COLLECTION RULES ---

    // Public business info is readable by anyone, writable only by superadmins.
    match /businesses/{businessId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Platform user profiles can be read by themselves or managed by superadmins.
    match /platformUsers/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow list, write: if isSuperAdmin();
    }
    
    // VIP members are managed only by superadmins.
    match /socioVipMembers/{memberId} {
      allow read, write: if isSuperAdmin();
    }
    
    // QR clients can be created publicly, but only managed by superadmins.
    match /qrClients/{clientId} {
        allow read, write: if isSuperAdmin();
        allow create: if true;
    }
    
    // Promotions/Events are publicly readable, but only writable by the assigned business staff/admin.
    match /businessEntities/{entityId} {
        allow read: if true;
        allow write: if isBusinessStaffOrAdmin(request.resource.data.businessId);
    }
    
    // Business-Promoter links are managed by the respective business staff/admin.
    match /businessPromoterLinks/{linkId} {
        allow read, write: if isBusinessStaffOrAdmin(request.resource.data.businessId);
    }
  }
}
