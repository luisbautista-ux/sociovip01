
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get the user's roles from their profile document
    function getUserRoles() {
      return get(/databases/$(database)/documents/platformUsers/$(request.auth.uid)).data.roles;
    }

    // Helper function to check if the user is a Super Admin
    function isSuperAdmin() {
      return isSignedIn() && 'superadmin' in getUserRoles();
    }
    
    // Helper function to check if a user is staff/admin of a specific business
    function isBusinessStaffOrAdmin(businessId) {
      let userProfile = get(/databases/$(database)/documents/platformUsers/$(request.auth.uid)).data;
      return isSignedIn() && userProfile.businessId == businessId && userProfile.roles.hasAny(['business_admin', 'staff']);
    }

    // --- PUBLIC-FACING COLLECTIONS ---
    
    match /businesses/{businessId} {
      // Anyone can read business public data
      allow read: if true;
      // Only superadmins can create, update, delete
      allow write: if isSuperAdmin();
    }
    
    match /businessEntities/{entityId} {
      // Anyone can read promotion/event details
      allow read: if true;
      // Only staff/admin of that specific business can write to their entities
      allow write: if isBusinessStaffOrAdmin(resource.data.businessId);
    }
    
    match /qrClients/{clientId} {
        // Anyone can create a new QR client profile (from public business page)
        allow create: if true;
        // Only superadmins can manage all clients
        allow read, update, delete: if isSuperAdmin();
    }
    
    // --- ADMIN & STAFF COLLECTIONS ---

    match /platformUsers/{userId} {
      // Superadmins can read any user profile and list all users
      allow get, list: if isSuperAdmin();
      // A user can read their own profile
      allow get: if isSignedIn() && request.auth.uid == userId;
      // Only superadmins can create, update, or delete user profiles
      allow write: if isSuperAdmin();
    }

    match /socioVipMembers/{memberId} {
      // Only superadmins can manage VIP members
      allow read, write: if isSuperAdmin();
    }
    
    match /businessPromoterLinks/{linkId} {
        // Staff/Admin of the business can manage their own promoter links
        allow read, write: if isBusinessStaffOrAdmin(resource.data.businessId);
    }
  }
}
