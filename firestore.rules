rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    //      Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    // Obtiene los datos del perfil del usuario logueado
    function getRequestingUserData() {
      return get(/databases/$(database)/documents/platformUsers/$(request.auth.uid)).data;
    }

    // Verifica si el usuario logueado es Super Admin
    function isSuperAdmin() {
      return isSignedIn() && 'superadmin' in getRequestingUserData().roles;
    }
    
    // Verifica si el usuario logueado tiene un rol específico para un negocio
    function isRoleForBusiness(role, businessId) {
      return isSignedIn() &&
             role in getRequestingUserData().roles &&
             getRequestingUserData().businessId == businessId;
    }

    // =================================
    //      Collection Rules
    // =================================

    // Negocios: Públicamente legibles, solo SuperAdmin puede escribir.
    match /businesses/{businessId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Entidades del Negocio (Promociones, Eventos): Legibles por todos, escritura restringida.
    match /businessEntities/{entityId} {
      allow read: if true;
      allow create, update: if isSignedIn() && (isSuperAdmin() || isRoleForBusiness('business_admin', request.resource.data.businessId) || isRoleForBusiness('staff', request.resource.data.businessId));
      allow delete: if isSignedIn() && (isSuperAdmin() || isRoleForBusiness('business_admin', resource.data.businessId));
    }
    
    // Usuarios de la Plataforma: Perfiles legibles por cualquier usuario logueado, pero solo SuperAdmin puede escribir.
    match /platformUsers/{userId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
    
    // Clientes QR: **CORRECCIÓN CLAVE** - Cualquiera puede leer/consultar, pero solo admins pueden modificar/borrar.
    match /qrClients/{clientId} {
      allow get, list: if true;
      allow create: if true; // La creación es pública desde la página del negocio.
      allow update, delete: if isSuperAdmin();
    }

    // Socios VIP: Solo SuperAdmin puede gestionar.
    match /socioVipMembers/{memberId} {
      allow read, write: if isSuperAdmin();
    }
    
    // Vínculos de Promotores: Solo el admin del negocio o el SuperAdmin pueden gestionar.
    match /businessPromoterLinks/{linkId} {
      allow read, write: if isSignedIn() && (isSuperAdmin() || isRoleForBusiness('business_admin', resource.data.businessId));
    }
  }
}
